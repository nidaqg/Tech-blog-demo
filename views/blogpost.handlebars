<section class="col-sm-8 justify-content-center text-center mb-4">

<section class="row">
  <section class="card m-2">
    <section class="card-body">
      <h5 class="text-center card-title">{{blogpost.post_title}}</h5>
      <h6 class= "text-center card-subtitle mb-2 text-muted">Written by: {{blogpost.user.username}}</h6>
      <h6 class="text-center card-subtitle mb-2 text-muted">{{format_date blogpost.date_created}}</h6>
        <p class = "card-text">{{blogpost.content}}</p>
    </section>
  </section>
</section>

<form class="m-3">
    <section class="mb-3">
        <input type="text" name="comment-body" id="newComment" class="form-control"/>
    </section>

    <section class="mb-3">
    <button id= "commentSubmit" class="btn btn-dark localBtn mb-3">Post Comment</button>
    </section>
</form>

<section class="row">
{{#each blogpost.comments as |comment|}}

{{> blog-comments}}

{{/each}}
</section>
</section>

<script src="/js/comment.js"></script>